<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Display screen for calculator -->
    <EditText
        android:id="@+id/display_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:paddingHorizontal="30dp"
        android:text="@string/display_initial_value"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:background="@drawable/display_background"
        android:enabled="false"
        android:focusable="false"
        android:clickable="false"
        android:contentDescription="@string/display_screen_description"
        android:autofillHints="none" />

    <!-- Grid layout for calculator buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button_7"
            style="@style/CalculatorButton"
            android:text="@string/button_7" />
        <Button
            android:id="@+id/button_8"
            style="@style/CalculatorButton"
            android:text="@string/button_8" />
        <Button
            android:id="@+id/button_9"
            style="@style/CalculatorButton"
            android:text="@string/button_9" />
        <Button
            android:id="@+id/button_div"
            style="@style/CalculatorButton"
            android:text="@string/button_div" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button_4"
            style="@style/CalculatorButton"
            android:text="@string/button_4" />
        <Button
            android:id="@+id/button_5"
            style="@style/CalculatorButton"
            android:text="@string/button_5" />
        <Button
            android:id="@+id/button_6"
            style="@style/CalculatorButton"
            android:text="@string/button_6" />
        <Button
            android:id="@+id/button_mul"
            style="@style/CalculatorButton"
            android:text="@string/button_mul" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button_1"
            style="@style/CalculatorButton"
            android:text="@string/button_1" />
        <Button
            android:id="@+id/button_2"
            style="@style/CalculatorButton"
            android:text="@string/button_2" />
        <Button
            android:id="@+id/button_3"
            style="@style/CalculatorButton"
            android:text="@string/button_3" />
        <Button
            android:id="@+id/button_sub"
            style="@style/CalculatorButton"
            android:text="@string/button_sub" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button_0"
            style="@style/CalculatorButton"
            android:text="@string/button_0" />
        <Button
            android:id="@+id/button_clear"
            style="@style/CalculatorButton"
            android:text="@string/button_clear" />
        <Button
            android:id="@+id/button_equals"
            style="@style/CalculatorButton"
            android:text="@string/button_equals" />
        <Button
            android:id="@+id/button_add"
            style="@style/CalculatorButton"
            android:text="@string/button_add" />

    </GridLayout>

</LinearLayout>
